<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <p><%= post.body %></p>
  </p>

  <p>
    <strong>Published:</strong>
    <%= post.published ? 'Yes' : 'No' %>
  </p>

  <p>
    <strong>User:</strong>
    <%= "#{post.user.name} ##{post.user.id.to_s}" %>
  </p>

</div>
