<p style="color: green"><%= notice %></p>
<%= link_to 'Home', root_path %>
<h1>Posts</h1>

<div id="posts">
  <table>
    <thead>
      <th>#</th>
      <th>Title</th>
      <th>Body</th>
      <th>Published</th>
      <th></th>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><p><%= post.body %></p></td>
          <td><%= post.published ? 'Yes' : 'No' %></td>
          <td><%= link_to "View", post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= link_to "New post", new_post_path %>
